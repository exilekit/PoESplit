<Window x:Class="PoESplit.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoESplit"
        mc:Ignorable="d"
        Style="{StaticResource PoBWindow}"
        Title="Debug" Height="350" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Margin="0 0 0 5" Style="{StaticResource PoBLabel}">Selecting a row will automatically copy it to clipboard.</Label>
        <ListBox Grid.Column="0" Grid.Row="1" x:Name="listboxLog" Background="#00341a" Foreground="White" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
    </Grid>
</Window>

    